{# app/Resources/views/layout.html.twig #}


<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">

<head>

    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="generator" content="pandoc" />


    <title>
        {% block title %}
            Exia Play Again
        {% endblock %}
    </title>

    <script src="{{ asset('lib/jquery-1.11.3/jquery.min.js') }}"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="{{ asset('lib/bootstrap-3.3.5/css/bootstrap.min.css') }}" rel="stylesheet" />
    <script src="{{ asset('lib/bootstrap-3.3.5/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('lib/bootstrap-3.3.5/shim/html5shiv.min.js') }}"></script>
    <script src="{{ asset('lib/bootstrap-3.3.5/shim/respond.min.js') }}"></script>

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {#<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">#}

    <script src="https://use.fontawesome.com/1c0ec46334.js"></script>

    <link rel="stylesheet" type="text/css" href="{{ asset('style.css') }}">

    <style type="text/css">code{white-space: pre;}</style>
    <link rel="stylesheet"
          href="{{ asset('lib/highlight/default.css') }}"
          type="text/css" />
    <script src="{{ asset('lib/highlight/highlight.js') }}"></script>
    <style type="text/css">
        pre:not([class]) {
            background-color: white;
        }
    </style>
    <script type="text/javascript">
        if (window.hljs && document.readyState && document.readyState === "complete") {
            window.setTimeout(function() {
                hljs.initHighlighting();
            }, 0);
        }
    </script>



    <style type="text/css">
        h1 {
            font-size: 34px;
        }
        h1.title {
            font-size: 38px;
        }
        h2 {
            font-size: 30px;
        }
        h3 {
            font-size: 24px;
        }
        h4 {
            font-size: 18px;
        }
        h5 {
            font-size: 16px;
        }
        h6 {
            font-size: 12px;
        }
        .table th:not([align]) {
            text-align: left;
        }
        .flashbag
        {
            padding-top: 30px;
        }
    </style>

    {% block head %}

    {% endblock %}

</head>

<body>

<style type = "text/css">
    .main-container {
        max-width: 940px;
        margin-left: auto;
        margin-right: auto;
    }
    code {
        color: inherit;
        background-color: rgba(0, 0, 0, 0.04);
    }
    img {
        max-width:100%;
        height: auto;
    }
    .tabbed-pane {
        padding-top: 12px;
    }
    button.code-folding-btn:focus {
        outline: none;
    }
</style>


<div class="container-fluid main-container">

    <!-- tabsets -->
    <script src="{{ asset('lib/navigation-1.0/tabsets.js') }}"></script>
    <script>
        $(document).ready(function () {
            window.buildTabsets("TOC");
        });
    </script>

    <!-- code folding -->






    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#exiaplayagain-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('exiaplayagain_homepage') }}" class="pull-left">
                    <img style="width: 44px; margin: 5px;" src="{{ asset('img/logo_stream.png') }}" onerror="this.src='{{ asset('img/logo_stream.png') }}'" onmouseover="this.src='{{ asset('img/logo_stream_whitened.png') }}'" onmouseout="this.src='{{ asset('img/logo_stream.png') }}'" alt="exiaplayagain" id="exiaplayagain-logo">
                </a>
            </div>


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="exiaplayagain-navbar">
                <ul class="nav navbar-nav">

                    <li><a href="{{ path('exiaplayagain_homepage') }}"><i class="fa fa-home"></i> </a></li>

                    {% if session.is_admin is defined %}
                        <!-- ADMIN menu -->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-server"></i> <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-header">Admin actions</li>
                                <li><a href="{{ path('exiaplayagain_userslist') }}"><i class="fa fa-users" aria-hidden="true"></i> Users List</a></li>
                                <li><a href="{{ path('exiaplayagain_gameslist') }}"><i class="fa fa-gamepad" aria-hidden="true"></i> Games List</a></li>
                                <li><a href="{{ path('exiaplayagain_voteslist') }}"><i class="fa fa-th-list" aria-hidden="true"></i> Votes list</a></li>
                            </ul>
                        </li>

                        <li><a href="{{ path('exiaplayagain_discordbot_home') }}"><img style="width: 24px;" src="{{ asset('img_logos/discord.svg') }}" onerror="this.src='{{ asset('img_logos/discord.svg') }}'" onmouseover="this.src='{{ asset('img_logos/discord_whitened.svg') }}'" onmouseout="this.src='{{ asset('img_logos/discord.svg') }}'" alt="discord" id="discord-logo"></a></li>
                    {% endif %}

                    {% if session.login is defined %}
                        <li><a href="{{ path('exiaplayagain_games') }}"><i class="fa fa-gamepad" aria-hidden="true"></i> Games List</a></li>
                        <li><a href="{{ path('exiaplayagain_votes') }}"><i class="fa fa-th-list" aria-hidden="true"></i> Votes List</a></li>
                    {% endif %}

                </ul>



                <ul class="nav navbar-nav navbar-right">
                    {% if session.login is defined %}
                        <li class="dropdown">
                            <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                {{ session.login }}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('exiaplayagain_myaccount') }}"><i class="fa fa-cog" aria-hidden="true"></i> Mon Compte</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('exiaplayagain_logout') }}">DÃ©connexion</a></li>
                            </ul>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('exiaplayagain_login') }}" class="pull-right">
                                <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!--/.container -->
    </div><!--/.navbar -->

    {% for message in app.session.flashbag.get('error') %}
        <div class="flashbag">
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="glyphicon glyphicon-remove-sign"></span>
                <strong>{{ message }}</strong>
            </div>
        </div>
    {% endfor %}

    {% for message in app.session.flashbag.get('notice') %}
        <div class="flashbag">
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="glyphicon glyphicon-ok-sign"></span>
                <strong>{{ message }}</strong>
            </div>
        </div>
    {% endfor %}

    {% block body %}

    {% endblock %}

    <footer class="footer">
        <div class="container">
            <p class="text-muted">
                Copyright <i class="fa fa-copyright"></i> <script type="text/javascript">var y=new Date().getFullYear();document.write(y)</script> Exia Play Again
                Powered by <a href="http://symfony.com/" target="_blank">Symfony</a>, <a href="http://getbootstrap.com/" target="_blank">Bootstrap</a> and <a href="http://fontawesome.io/" target="_blank">Font Awesome</a>.
            </p>
        </div>
    </footer>

    {% block scripts %}

    {% endblock %}


</div>

<script>

    // add bootstrap table styles to pandoc tables
    $(document).ready(function () {
        $('tr.header').parent('thead').parent('table').addClass('table table-condensed');
    });

</script>


</body>
</html>
